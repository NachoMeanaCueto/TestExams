<UserControl x:Class="TestExams.Controls.AddTheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestExams.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20">
            <Label Name="lab_Title" FontSize="20" Margin="10"></Label>
            <TextBox Name="Tbx_subjet" Margin="10" Controls:TextBoxHelper.ClearTextButton="True" ></TextBox>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <Button Name="btn_Accept" Margin="5" Click="btn_Accept_Click"></Button>
                <Button Name="btn_Cancel" Margin="5" Click="btn_Cancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
